{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "isolatedModules": true,
    "baseUrl": "."
  },
  "include": [
    "src"
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "src/types",
    "babel.config.js"
  ]
}